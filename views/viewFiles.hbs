{{> head }}
<body>
<script>
    var files = '{{{files}}}';

    var playerInstance;

    function deleteByName(event) {
        var file = event.data.file;

        $.ajax({
            url: "/viewFiles",
            type: "POST",
            dataType: 'json',
            data: JSON.stringify(file),
            contentType: "application/json",
            complete: function () {
                console.log('success');
                removeRowByTarget(file.target);
            }
        });
    }

    function goToEditPage(event) {
        fadeOutContainer();
        var file = event.data.file;
        window.location = "/editFile/" + file.target;
    }

    function playFile(event) {
        var file = event.data.file;
        startPlayer(file);
        $('#popupHeader').text(file.name);
    }

    function removeRowByTarget(target) {
        $('#fileRow_' + target).fadeOut(200, function () {
            $('#fileRow_' + target).remove();
        });
    }

    function fadeOutContainer() {
        $('.sm_fade-in').animate({opacity: '0'}, 100);
    }

    function startPlayer(file) {
        jwplayer.key = "hKr0It8yDiMnKte/Cy3p9KDJ74XfRooWYAiO8A==";
        playerInstance = jwplayer("contentfeed");
        playerInstance.setup({
            file: "/uploaded/" + file.target + file.extension,
            controls: false,
            autostart: true,
            autoplay: true,
            repeat: true,
            width: 598
        });

    }
</script>
<div class="container container-editFiles">
    <div class="panel panel-default">
        <div class="panel-body">
            {{> header pageTitle='View Files' }}
            <div class="sm_fade-in">
                <div id="uploadedFileList">
                    <!-- Where the files list is populated -->
                    {{#each files}}
                        <div id="fileRow_{{target}}" class="row uploaded-file-row">
                            <div class="col-xs-2">
                                <button id="fileList_play_{{@index}}" class="btn btn-lg sm-button sm-play" data-toggle="modal" data-target="#playModal">Play</button>
                                <script>
                                    $('#fileList_play_{{@index}}').on('click',                                             {
                                        file: {
                                            extension: "{{extension}}",
                                            target: "{{target}}",
                                            name: "{{name}}"
                                        }
                                    }, playFile)
                                </script>
                            </div>
                            <div id="fileList_title{{@index}}" class="col-xs-4">{{name}}</div>
                            <div id="fileList_extension" class="col-xs-1">{{extension}}</div>
                            <div id="fileList_useType" class="col-xs-1">{{useType}}</div>
                            <div class="col-xs-2">
                                <button id="fileList_edit{{@index}}" class="btn btn-lg sm-button sm-edit">Edit</button>
                                <script>
                                    $('#fileList_edit{{@index}}').on('click',
                                            {
                                                file: {
                                                    extension: "{{extension}}",
                                                    target: "{{target}}",
                                                    name: "{{name}}"
                                                }
                                            }, goToEditPage)
                                </script>
                            </div>
                            <div class="col-xs-2">
                                <button id="fileList_delete{{@index}}" class="btn btn-lg sm-button sm-delete">X</button>
                                <script>
                                    $('#fileList_delete{{@index}}').on('click',                                             {
                                        file: {
                                            extension: "{{extension}}",
                                            target: "{{target}}",
                                            name: "{{name}}"
                                        }
                                    }, deleteByName)
                                </script>
                            </div>
                        </div>
                    {{/each}}
                </div>
                <br>
                <hr>
                <button id="uploadFilesButton" class="btn btn-lg sm-button edit-btn sm-pageLink" type="button">
                    Upload Files
                </button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="playModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button id="closePlayerModalButton" type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="popupHeader" class="modal-title"></h4>
            </div>
            <div id="contentfeed" class="modal-body">
                <!-- Player goes here -->
            </div>
            <div class="modal-footer">
                <button id="closePlayerModalButton" type="button" class="btn btn-default sm-button sm-cancel"
                        data-dismiss="modal">Close
                </button>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script src="/javascripts/jwplayer/jwplayer.js"></script>
<script>

    $('#contentfeed').on('resize', function () {
        playerInstance.resize($('#contentfeed').width());
    });


    $('#closePlayerModalButton').on('click', function () {
        if (playerInstance) {
            jwplayer("contentfeed").remove();
            $('#contentfeed').empty();
        }
    });


    $('#uploadFilesButton').on('click', function () {
        fadeOutContainer();
        window.location = "/upload";
    });
</script>
</body>