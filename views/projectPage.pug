extends layout.pug
block variables
    - var pageTitle = "Project Page"
    - var containerClass = "container-editFiles container_project-page"
block content
    link(rel="stylesheet", href="/stylesheets/style-project-page.css")
    script(src="/javascripts/jwplayer/jwplayer.js")
    script(src="https://code.jquery.com/jquery-2.2.0.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
    script(src="/javascripts/Sortable.min.js")
    script(src="/javascripts/projectPage_client.js")
    .row
        .col-xs-6
            h3 Your Project
            div(id="projectPlannerContainer", class="project-planner")
            h3 Click A Square To Preview
            div(id="projectPage-CurrentSelection", class="current-selection_block")
        .col-xs-6
            h3 Drag & Drop
            .project-page-modal_body-title-buttons
                button( onclick="buttonListClips()", type="button", class="btn btn-default sm-button sm-pageLink" )
                    | List Clips
                button(onclick="buttonListCards()", type="button", class="btn btn-default sm-button sm-pageLink", disabled="disabled")
                    | List Cards
            br
            div(id="projectPage-contentBlock" class="projectPage_content-Block")
    hr
    button(class="btn btn-lg sm-button upload-btn sm-save", type="button", data-toggle="modal", data-target="#projectModal")
        | Save New Project
    div(class="modal fade", id="projectModal", role="dialog")
        .modal-dialog
            .modal-content
                .modal-header
                    button( type="button", class="close", data-dismiss="modal")
                        | &times;
                    h4(id="popupHeader", class="modal-title")
                        | Save Project
                div( class="modal-body project-page-modal")
                    div
                        label(for="input_name") Name:
                        input(id="input_name" type="text" name="name")
                    div
                        label(for="input_creator") Creator:
                        input(id="input_creator" type="text" name="creator")
                    div
                        label(for="input_description") Description:
                        input(id="input_description" type="text" name="description")
                    div
                        label(for="input_tags") Tags:
                        input(id="input_tags" type="text" name="tags")
                .modal-footer
                    button( type="button", class="btn btn-default sm-button sm-cancel" data-dismiss="modal").
                        Cancel
                    button( onclick="saveNewProject()", type="button", class="btn btn-default sm-button sm-save").
                        Save
    div(class="modal fade", id="confirmDeleteModal", role="dialog")